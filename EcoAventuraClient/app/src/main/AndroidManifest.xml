<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.connection.simpleclient">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="Eco Aventura"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="gui.MainActivity" />
        <activity android:name="gui.Login" />
        <activity
            android:name="gui.MainContent"
            android:label="@string/title_activity_main_content"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="gui.ViewActivitate" />
        <activity android:name="gui.AnimatorContent" />
        <activity android:name="gui.MembriContent" />
        <activity android:name="gui.InformatiiMembru" />
        <activity android:name="gui.EchipeContent" />
        <activity
            android:name="gui.GameActivity"
            android:label="GameActivity"
            android:launchMode="singleTask" />
        <activity
            android:name="gui.Start"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="gui.Settings"
            android:label="@string/title_activity_settings" />
        <activity android:name="gui.Report" />
        <service android:name="floatingWindow.FloatingWindow"></service>
    </application>

</manifest>